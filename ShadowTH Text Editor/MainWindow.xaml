<Window x:Class="ShadowTH_Text_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowTH_Text_Editor"
        mc:Ignorable="d"
        Title="ShadowTH Text Editor / FNT Editor" Height="765" Width="918" MinWidth="918" MinHeight="765" MaxHeight="765" MaxWidth="918" Icon="ShadowFNT.ico" ResizeMode="CanMinimize">
    <Grid x:Name="mainGridPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="File Controls" Margin="193,34,30,578" Grid.Column="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,15,0,10">
                    <Button x:Name="Button_SelectFNTS" Margin="5,0,20,0" VerticalAlignment="Top" Height="30" Click="Button_SelectFNTSClick" Grid.Column="1">Open /fonts/ Folder</Button>
                    <Button x:Name="Button_ExportChangedFNTs" IsEnabled="False" VerticalAlignment="Top" Height="30" Click="Button_ExportChangedFNTsClick" Content="Save All Changed FNTs" Grid.Column="1" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="Button_OpenAFS" IsEnabled="False" Margin="20,0,60,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Click="Button_SelectAFSClick" Content="Open AFS File" Grid.Column="1"/>
                    <Button x:Name="Button_ExportAFS" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Click="Button_ExportAFSClick" Content="Save AFS File" Grid.Column="1"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="FNT Files" Margin="10,176,176,55" Padding="10">
            <ListBox x:Name="ListBox_OpenedFNTS" SelectionChanged="ListBox_OpenedFNTS_SelectionChanged"/>
        </GroupBox>
        <GroupBox Header="Subtitles" Margin="271,176,326,55" Padding="10" Grid.ColumnSpan="2">
            <ListBox x:Name="ListBox_CurrentFNTOpened" SelectionChanged="ListBox_CurrentFNTOpened_SelectionChanged"/>
        </GroupBox>
        <GroupBox Header="Current Subtitle Attributes" Margin="193,176,30,150" Padding="10" Grid.Column="1">
            <StackPanel>
                <TextBlock>ActiveTime</TextBlock>
                <TextBox x:Name="TextBox_SubtitleActiveTime"/>
                <TextBlock>AudioID</TextBlock>
                <TextBox x:Name="TextBox_AudioID"/>
                <TextBlock>Audio FileName</TextBlock>
                <TextBlock x:Name="TextBlock_AfsAudioIDName" Margin="0,5,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="Button_ReplaceADX" IsEnabled="False" Margin="20,0,10,0" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_ReplaceADXClick" Content="Replace ADX"/>
                    <Button x:Name="Button_ExtractADX" IsEnabled="False" Margin="60,0,0,0" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_ExtractADXClick" Content="Extract ADX"/>
                </StackPanel>
                <TextBlock>Text</TextBlock>
                <TextBox x:Name="TextBox_EditSubtitle" TextWrapping="Wrap" AcceptsReturn="True" Height="145"/>
                <Button x:Name="Button_SaveCurrentSubtitle" Height="30" Margin="50,10,50,0" Content="Save Subtitle Changes" Click="Button_SaveCurrentSubtitle_Click"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Search Filters" Margin="10,34,326,575" Padding="10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock>Search for Subtitle Text</TextBlock>
                    <TextBox x:Name="TextBox_SearchText" AcceptsReturn="True" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" TextChanged="TextBox_SearchFilters_TextChanged" Height="31" Width="225"/>
                </StackPanel>
                <StackPanel Margin="35,0,0,0">
                    <TextBlock>Search for Audio FileName</TextBlock>
                    <TextBox x:Name="TextBox_SearchAudioFileName" AcceptsReturn="True" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" TextChanged="TextBox_SearchFilters_TextChanged" Height="31" Width="225"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Program Controls" Margin="193,576,30,55" Grid.Column="1">
            <StackPanel>
                <CheckBox x:Name="CheckBox_ChooseWhereToSave" Margin="0,5" Content="Pick folder on Save"/>
                <CheckBox x:Name="CheckBox_NoReplaceMetTxd" Content="Do not replace .met and .txd"/>
                <Button x:Name="Button_About" Margin="0,5" Click="Button_About_Click">About</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
